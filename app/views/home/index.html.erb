<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>HUB9 Chat</title>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, sans-serif;
        background: #f5f5f0;
        padding: 20px;
        margin: 0;
      }
      .chat-box {
        max-width: 600px;
        margin: auto;
        background: white;
        padding: 16px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      }
      #secretary-bar {
        position: sticky;
        top: 0;
        z-index: 50;
        display: flex;
        gap: 12px;
        padding: 12px 16px;
        background: rgba(255,255,255,0.85);
        backdrop-filter: blur(8px);
        border-radius: 8px;
        margin-bottom: 16px;
      }
      .sec-btn {
        padding: 10px 20px;
        border-radius: 999px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        background: #f3f4f6;
        transition: transform 0.15s ease, box-shadow 0.15s ease, opacity 0.15s ease;
      }
      .sec-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
      }
      .sec-btn:active {
        transform: scale(0.96);
      }
      .sec-btn.done {
        opacity: 0.6;
        pointer-events: none;
      }
      input[type="text"] {
        width: 100%;
        padding: 12px;
        margin-top: 12px;
        box-sizing: border-box;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
      }
      .submit-btn {
        margin-top: 8px;
        padding: 10px 20px;
        background: #3b82f6;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
      }
      .submit-btn:hover {
        background: #2563eb;
      }
      #chat {
        margin-top: 16px;
        min-height: 100px;
      }
      .card {
        padding: 16px;
        background: #f9fafb;
        border-radius: 12px;
        margin-bottom: 12px;
        border: 1px solid #e5e7eb;
        animation: fadeUp 0.4s ease-out;
      }
      .card.user {
        background: #e0f2fe;
        border-color: #bae6fd;
      }
      .card .name {
        font-weight: 600;
        font-size: 12px;
        color: #6b7280;
        margin-bottom: 8px;
      }
      .card .content {
        white-space: pre-wrap;
        line-height: 1.6;
      }
      .card .content .highlight {
        color: #dc2626;
        font-weight: 600;
      }
      .card .content .muted {
        color: #9ca3af;
      }
      @keyframes fadeUp {
        from { opacity: 0; transform: translateY(6px); }
        to   { opacity: 1; transform: translateY(0); }
      }
      #typing {
        padding: 12px;
        color: #6b7280;
        font-style: italic;
        animation: fadeUp 0.3s ease-out;
      }
      .briefing-header {
        font-size: 14px;
        font-weight: 700;
        color: #1f2937;
        border-bottom: 2px solid #e5e7eb;
        padding-bottom: 8px;
        margin-bottom: 12px;
      }
    </style>
  </head>

  <body>
    <div class="chat-box">
      <h1>HUB9 Chat</h1>

      <div id="secretary-bar">
        <button class="sec-btn morning" onclick="sendQuick('/Êúù', 'morning')">üåÖ Êúù„ÅÆÁßòÊõ∏</button>
        <button class="sec-btn night" onclick="sendQuick('/Â§ú', 'night')">üåô Â§ú„ÅÆÁßòÊõ∏</button>
      </div>

      <form id="chat-form">
        <input type="text" id="message" placeholder="ÂÖ•Âäõ‚Ä¶" />
        <button type="submit" class="submit-btn">ÈÄÅ‰ø°</button>
      </form>

      <div id="chat"></div>
    </div>

    <script>
    function showTyping(name) {
      const el = document.createElement("div");
      el.id = "typing";
      el.innerText = `${name} „ÅåÁ¢∫Ë™ç„Åó„Å¶„ÅÑ„Åæ„Åô‚Ä¶`;
      document.querySelector("#chat").appendChild(el);
    }

    function hideTyping() {
      const el = document.getElementById("typing");
      if (el) el.remove();
    }

    function appendCard(name, text, isUser = false, type = null) {
      const el = document.createElement("div");
      el.className = "card" + (isUser ? " user" : "");

      let header = "";
      if (type === "morning") {
        header = '<div class="briefing-header">üåÖ Êúù„ÅÆÁßòÊõ∏„Éñ„É™„Éº„Éï</div>';
      } else if (type === "night") {
        header = '<div class="briefing-header">üåô Â§ú„ÅÆÁßòÊõ∏„É¨„Éì„É•„Éº</div>';
      }

      el.innerHTML = `<div class="name">${name}</div>${header}<div class="content">${text}</div>`;
      document.querySelector("#chat").appendChild(el);
    }

    function markAutoRun(type) {
      const el = document.querySelector(`.sec-btn.${type}`);
      if (el) el.classList.add("done");
    }

    function sendQuick(command, type) {
      showTyping("HUB9");

      fetch("/api/chat", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ message: command })
      })
      .then(res => res.json())
      .then(data => {
        hideTyping();
        appendCard("HUB9", data.reply, false, type);
        markAutoRun(type);
      });
    }

    document.getElementById("chat-form").addEventListener("submit", async (e) => {
      e.preventDefault();
      const msg = document.getElementById("message").value;
      if (!msg.trim()) return;

      appendCard("„ÅÇ„Å™„Åü", msg, true);
      document.getElementById("message").value = "";
      showTyping("HUB9");

      const res = await fetch("/api/chat", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ message: msg })
      });

      const data = await res.json();
      hideTyping();
      appendCard("HUB9", data.reply);
    });
    </script>
  </body>
</html>
