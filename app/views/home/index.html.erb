      let mode = "default";

      function addMsg(role, text, meta=""){
        const div = document.createElement("div");
        div.className = "msg " + (role === "user" ? "user" : "bot");
        div.innerHTML = (meta ? `<div class="meta">${meta}</div>` : "") + `<div>${escapeHtml(text).replace(/\n/g,"<br>")}</div>`;
